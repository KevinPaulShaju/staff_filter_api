    crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <script>

    M.FormSelect.init(document.querySelectorAll("select"))
  </script>
  <script>
    let gender = "";
    let position = "";
    function genderSelect() {
      let g = document.getElementById("gender");
      gender = g.options[g.selectedIndex].value; 
    }
    function positionSelect() {
      let p = document.getElementById("position");
      position = p.options[p.selectedIndex].value;
    }
    var btn = document.getElementById("btn")
    if (btn) {
      btn.addEventListener("click", setHref);
    }
    function setHref() {
      document.getElementById("btn").href = `/view/staff?gender=${gender}&position=${position}`;
    }
  </script>
</body>
